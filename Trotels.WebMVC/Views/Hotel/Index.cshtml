@model HotelDTO

<h2>Create New Hotel</h2>

<form asp-action="Create">
    <div class="form-group">
        <label asp-for="HotelName">Name:</label>
        <input asp-for="HotelName" class="form-control" />
        <span asp-validation-for="HotelName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="HotelAddress">Description:</label>
        <textarea asp-for="HotelAddress" class="form-control"></textarea>
        <span asp-validation-for="HotelAddress" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="HotelCity">Address:</label>
        <input asp-for="HotelCity" class="form-control" />
        <span asp-validation-for="HotelCity" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="HotelCountry">Price Per Night:</label>
        <input asp-for="HotelCountry" class="form-control" />
        <span asp-validation-for="HotelCountry" class="text-danger"></span>
    </div>

    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
    </div>
</form>
