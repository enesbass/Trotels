@using Microsoft.AspNetCore.Identity;
@model IEnumerable<IdentityRole>

@{
    Layout = "_Layout";
}

<a asp-action="Create" asp-controller="Role" class="btn btn-primary">Yeni Role Ekle</a>
<table class="table table-hover">
    <thead>
        <tr>
            <td>Id</td>
            <td>Name</td>
            <td>NormalizedName</td>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>@item.NormalizedName</td>
            </tr>
        }
    </tbody>
</table>